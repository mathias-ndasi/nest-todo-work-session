generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Usertype {
  USER
  ADMIN
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  usertype    Usertype @default(USER)
  dateCreated DateTime @default(now())
  dateUpdated DateTime @updatedAt

  userProfile Userprofile @relation(fields: [id], references: [userId])

  toDo          Todo[]
  userprofileId Int

  @@map("User")
}

model Userprofile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  firstName   String
  lastName    String
  address     String
  password    String
  dateCreated DateTime @default(now())
  dateUpdated DateTime @updatedAt

  User        User[]

  @@unique([firstName, lastName])
  @@map("user_profile")
}

model Todo {
  id          Int      @id @default(autoincrement())
  name        String
  todoId      Int
  done        Boolean  @default(false)
  dateCreated DateTime @default(now())
  dateUpdated DateTime @updatedAt

  user User @relation(fields: [todoId], references: [id])

  @@map("To_do")
}


